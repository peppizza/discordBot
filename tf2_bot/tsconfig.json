    "compileOnSave": true,
    "compilerOptions": {
        "target": "ESNext",
        "module": "UMD",
        "strict": true,
        "moduleResolution": "Node",
        "experimentalDecorators": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    }
}